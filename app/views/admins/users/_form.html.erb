<div class="form-group">
  <%= f.label :name, for: 'inputName', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :name, autofocus: true, class: 'form-control', id: 'inputName' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, for: 'inputEmail', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :email, class: 'form-control', id: 'inputEmail' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :password, for: 'inputPassword', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.password_field :password, class: 'form-control', id: 'inputPassword' %>
  </div>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, for: 'inputPasswordConfirmation', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.password_field :password_confirmation, class: 'form-control', id: 'inputPasswordConfirmation' %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit t('views.button.sent'), class: 'btn btn-primary' %>
  </div>
</div>
