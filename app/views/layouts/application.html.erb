<!DOCTYPE html>
<html>
  <head>
    <title><%= Settings.service_name %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div><%= render partial: '/layouts/shared/menu' %></div>
    <div class="container">
      <div class="row">
        <div><%= bootstrap_flash %></div>
        <div class="col-md-9">
          <div><%= yield %></div>
        </div>
        <div class="col-md-3">
          <%= yield(:command) if content_for?(:command) %>
        </div>
      </div>
    </div>
  </body>
</html>
