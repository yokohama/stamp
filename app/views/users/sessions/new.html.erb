<div class='well'>
  <h2><%= t('.title') %></h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  
    <div class="form-group">
      <%= f.label :email, for: 'inputEmail', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, class: 'form-control', id: 'inputEmail' %>
      </div>
    </div>
  
    <div class="form-group">
      <%= f.label :password, for: 'inputPassword', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: 'form-control', id: 'inputPassword' %>
      </div>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label>
              <%= f.check_box :remember_me %><%= f.label :remember_me %>
            </label>
          </div>
        </div>
      </div>
    <% end -%>
  
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit t('views.button.login'), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
  
  <%= render "users/shared/links" %>
</div>
